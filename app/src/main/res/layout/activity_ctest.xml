<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_ctest"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.group.mitrc.Ctest">


   <ImageView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:id="@+id/i1"
       android:src="@drawable/q1" />
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/i1"
        android:id="@+id/rg1">
    <RadioButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0 times"
        android:id="@+id/r1"
        android:layout_below="@id/rg1"
        />
    <RadioButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="infinite times"
        android:id="@+id/r2"
        android:layout_below="@id/r1"
        />
    <RadioButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1 times"
        android:id="@+id/r3"
        android:layout_below="@id/r2"
        />
    <RadioButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="10 times"
        android:id="@+id/r4"
        android:layout_below="@id/r3"
        />
     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content">
      <Button
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:onClick="hun"
          android:id="@+id/bt1"
          android:text="Next"
          android:layout_marginTop="80dp"
          />

     </RelativeLayout>
    </RadioGroup>

</RelativeLayout>
